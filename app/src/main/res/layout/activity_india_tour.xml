<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".india_tour">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="350dp"
        android:padding="20dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/round_recent_update_home"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailed_topic"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India's tour of New Zealand"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold">

        </TextView>

        <ImageView
            android:id="@+id/detailed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/article_images"
            android:adjustViewBounds="true"
            android:src="@drawable/india_washout">
        </ImageView>

        <TextView
            android:id="@+id/detailed_text"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="@string/india_new"></TextView>

    </LinearLayout>

</ScrollView>